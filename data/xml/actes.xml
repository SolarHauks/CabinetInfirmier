    <!-- Description des types d'actes réalisables lors d'une visite médicale. Contient de plus les informations 
    nécessaires pour le calcul du montant de la facture de la visite-->
    
    <types>
        <type id="pi">prélèvements et injections</type>
        <type id="pc">pansements courants</type>
        <type id="pl">pansements lourds et complexes nécessitant des condition d’asepsie rigoureuse</type>
        <type id="sd">Soins infirmiers à domicile pour un patient, quel que soit son âge, en situation de dépendance 
            temporaire ou permanante.</type>
    </types>
    <actes>
        <acte id="101" type="pi" clé="AMI" coef="1.5">Prélèvement par ponction veineuse directe. </acte>
        <acte id="102" type="pi" clé="AMI" coef="5">Saignée. </acte>
        <acte id="103" type="pi" clé="AMI" coef="1">Prélèvement aseptique cutané ou de sécrétions muqueuses, prélèvement
            de selles ou d’urine pour examens sytologiques, bactériologiques, mycologiques. </acte>
        <!-- ...et plein d’autres actes -->
    </actes>
